general {
	colors = true
	interval = 1
}

order += "disk /"
order += "wireless _first_"
order += "battery 0"
order += "tztime local"

wireless _first_ {
        format_up = "%essid - %quality"
        format_down = "down"
}

battery 0 {
        format = "%status %percentage"
} 

tztime local {
        format = "%Y-%m-%d %H:%M"
}

disk "/" {
	format = "%avail"
}
